<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Mon Profil</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h2>Informations de profil</h2>
      <p>Nom : <%= current_user.nickname %></p>
      <p>Email : <%= current_user.email %></p>
    </div>

    <div class="col-md-6">
      <h2>Mes Publications</h2>
      <% if current_user.posts.any? %>
        <% current_user.posts.each do |post| %>
          <p><%= link_to post.title, post_path(post) %></p>
        <% end %>
      <% else %>
        <p>Vous n'avez rien posté pour le moment.</p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h2>Mes Commentaires</h2>
      <% if current_user.comments.any? %>
        <% current_user.comments.each do |comment| %>
          <p><%= link_to comment.post.title, post_path(comment.post) %></p>
          <p><%= comment.content %></p>
        <% end %>
      <% else %>
        <p>Vous n'avez encore commenté sur rien.</p>
      <% end %>
    </div>
  </div>
</div>
